    input[type=submit]{
        width: 160px;
    	margin-top: 5px;
    	font-size: 1.4em;
    }
    a {font-size: 1em; margin-top: 30px;}
  }
@media only screen and (max-width: 625px){
    input[type=text], [type=password]{
        padding: 10px 10px;
	    font-size: 1.5em;
	}
  } 
@media only screen and (max-width: 425px){ 
    #logo {margin: 0 auto 10px auto; height: 80px;}
	/* news*/
	section.news div.content {width: 10%; height: 200px;}
   /*login*/
   button#btn {
       display: block;
       position: absolute;
       z-index: 1;
	   border-radius: 20px; border: none;
	   font-size: 1.8em;
	   color: #fff; background-color: #ff3333;
