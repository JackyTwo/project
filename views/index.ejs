<style>
@import url(https://fonts.googleapis.com/css?family=Oswald|Pacifico:400,300,500);
* {box-sizing: border-box;}
* {margin:0; padding:0;}
h1 { font-family: 'Pacifico'; font-size: 5.2em; font-weight: 500; }
p { font-family: 'Oswald'; font-size: 1.7em; font-weight: 250; }
a {font-family: 'Pacifico'; font-weight: 300;}
button {font-family: 'Oswald'; font-weight: 400;}
form input[value] {font-family: 'Pacifico'; font-size: 1em;}
form input[placeholder] {font-family: 'Pacifico';}
body {min-width:300px; max-width: 1920px;}
/* header */
header.top{ display:flex;}


	
div.all{
  margin-top:4%;
  margin-bottom:4%;
  margin-right:0;
  margin-left:0;
  
  border: 3px solid #73AD21;
  padding: 10px;
  width: 100%;
  height: 100%;
  background-color: #D0D594;
  position: relative;
  display:flex;
   
}

/* news */

section.news {
    width: 50%;
	margin: 0 0 0 0;
	color:white;
	display:inline;
	text-align:center;
}
section.news h1 {margin: 20% auto 0 auto;}

::-webkit-scrollbar {
    width: 0; 
   
}

section.news div.content{
    width: 400px; height: 300px; 
	overflow-Y: scroll; 
	margin: auto;
}

/* login */
button#btn {display: none;}
section#login{
    background-color: white;
    margin: 10% auto 10% auto;
    border-radius: 30px;
    box-shadow: 0 4px 40px -10px #571a21;
	transition: 1s;
	transition-timing-function: ease;
}

input[type=text], [type=password]{
    border: none;
    background-color: #eeeeee;
    color: #949393;
	border-radius: 10px;
    display:block;
	width:85%;
    padding: 20px  20px;
    margin: 10px 25px auto 20px;
	font-size: 2em;
	transition: 1s;
	transition-timing-function: ease;
}
input[type=text]{ margin-top: 40px;}

input[type=submit]{
    -webkit-appearance: none;
	float: right;
	width: 200px; height: auto;
	padding: 20px 0 20px 0;
	margin: 30px 40px 30px 0;
	border-radius: 25px; border: none;
	font-size: 1.6em;
	background-color: #ff6666; color: #ffffff;	
	text-decoration: none;
	cursor: pointer;
	box-shadow: 1px 1px 10px -3px #302f2f;
	transition:  0.3s;
	transition-timing-function: ease;
}

input[type="submit"]:hover{
	background-color: #fc8b7e;
	box-shadow: 0 9px 25px 1px rgba(252,109,91,0.6), 0 15px 55px -5px rgba(57,56,56,0.15);
    }
a{
    text-decoration: none;
	display: block;
    font-size: 1.1em;
	margin: 50px auto auto 25px;
	padding-right: 10px;
	}
	
a:link {color: #939292;}
a:visited {color: #939292;}
a:hover {color: black;}
a:active {color: hotpink;}


@media only screen and (max-width: 1000px){

    h1 {font-size: 2.8em;}
    p {font-size: 1em;}

    /* news*/
    section.news h1 {margin-top: 30%;}
    section.news div.content {width: 350px; height: 260px;}

    /* login*/
    section#login{margin-top: 15%;}
    input[type=text], [type=password]{ 
    	padding: 15px 15px;
    	font-size: 1.7em; 
    }
    input[type=submit]{
        width: 160px;
    	margin-top: 5px;
    	font-size: 1.4em;
    }
    a {font-size: 1em; margin-top: 30px;}
  }
  
  
@media only screen and (max-width: 825px){
    h1 {font-size: 2.6em;}
	/*news*/
	section.news h1{margin-top: 20%;}
	section.news div.content {width: 250px;}
	/* login*/
	input[type=text], [type=password]{
        padding: 10px 10px;
	    font-size: 1.5em;
	}
  }
@media only screen and (max-width: 760px){
    div.all{flex-direction: column;}
	
	/* news*/ 
	section.news{width:90%;}
	section.news h1{margin-top:15%;}
	section.news div.content {width: 70%;}
	
	/*login*/
	section#login{margin-top: 15%;}
    input[type=text], [type=password]{ 
